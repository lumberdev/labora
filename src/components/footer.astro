---
import { Image } from 'astro:assets'
import Logo from '/labora-logo.svg?raw'
import LinkedIn from '/linkedin.svg?raw'
import Mail from '/mail.svg?raw'
import dallas from '../assets/footer-dallas.png'
import london from '../assets/footer-london.png'
---

<footer class='py-24 flex items-center justify-between'>
  <div class='flex flex-col gap-4 [&>svg]:h-12'>
    <Fragment set:html={Logo} />
    <p class='text-xs text-dark-grey'>Â© 2024 Labora. All rights reserved.</p>
  </div>
  <div class='flex gap-[100px]'>
    <div class='flex gap-5 mt-[9.53px]'>
      <Image src={dallas} alt='dallas' class='h-[120px] w-[38px]' />
      <div class='mt-5'>
        <p class='uppercase tracking-wide pb-[10px] leading-tight'>Dallas</p>
        <p>400 S. Record St.</p>
        <p>Suite 1600</p>
        <p>Dallas, TX 75202 USA</p>
      </div>
    </div>
    <div class='flex gap-5'>
      <Image src={london} alt='london' class='h-[129px] w-[25px]' />
      <div class='mt-5'>
        <p class='uppercase tracking-wide pb-[10px] leading-tight'>London</p>
        <p>11 Dover St.</p>
        <p>London W1S 4JL</p>
        <p>United Kingdom</p>
      </div>
    </div>
  </div>
  <div class='flex gap-5'>
    <a
      href='https://www.linkedin.com/company/labora-inc'
      target='_blank'
      rel='noopener noreferrer'
    >
      <div
        class='rounded-full border border-white h-12 w-12 flex items-center justify-center'
      >
        <Fragment set:html={Mail} />
      </div>
    </a>
    <a href='mailto:info@labora.com' target='_blank' rel='noopener noreferrer'>
      <div
        class='rounded-full border border-white h-12 w-12 flex items-center justify-center'
      >
        <Fragment set:html={LinkedIn} />
      </div>
    </a>
  </div>
</footer>
