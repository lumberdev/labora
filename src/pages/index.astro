---
import '@fontsource-variable/dm-sans'
import Nav from '../components/nav.astro'
import About from '../components/about.astro'
import Footer from '../components/footer.astro'
import Companies from '../components/companies.astro'
import Investments from '../components/investments.astro'
import Impact from '../components/impact.astro'
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <title>Labora</title>
  </head>
  <body class='bg-grey-dark text-white'>
    <main>
      <Nav />
      <About />
      <Companies />
      <Investments />
      <Impact />
      <Footer />
    </main>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }

  section {
    scroll-margin-top: 6.125rem; /* Adjust this value to match your nav height */
  }

  header > nav {
    padding-left: 1.25rem;
    padding-right: 1.25rem;
  }

  main > section:not(:first-of-type) {
    padding-left: 40px;
    padding-right: 40px;
  }

  @media (min-width: 768px) {
    header > nav {
      padding-left: 50px;
      padding-right: 50px;
    }

    main > section:not(:first-of-type) {
      max-width: 1440px;
      margin-left: auto;
      margin-right: auto;
      padding-left: 100px;
      padding-right: 100px;
    }
  }
</style>
